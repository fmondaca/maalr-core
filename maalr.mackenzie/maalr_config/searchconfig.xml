<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<dictionaryConfiguration>

	<databaseColumns>
		<column name="MPLemma" />
		<column name="ELemma" />
	</databaseColumns>

	<!-- The input field within the search form -->
	<queryKeys>
		<queryKey id="searchPhrase" />
	</queryKeys>

	<!-- Each 'fieldChoice' represents a combo box containing the defined options -->
	<columnSelectors>
		<columnSelector id="language">
			<options>
				<option id="english">
					<columns>
						<column reference="ELemma" />
					</columns>
				</option>
				<option id="middle_persian">
					<columns>
						<column reference="MPLemma" />
					</columns>
				</option>
				<option id="both" default="true">
					<columns>
						<column reference="ELemma" />
						<column reference="MPLemma" />
					</columns>
				</option>
			</options>
		</columnSelector>


	</columnSelectors>


	<queryBuilders>

		<queryBuilder id="method" queryKeyId="searchPhrase"
			columnSelectorId="language">
			<options>
				<option id="normal" default="true" preset="DEFAULT" />
				<option id="intern" preset="INFIX" />
				<option id="prefix" preset="PREFIX" />
				<option id="suffix" preset="SUFFIX" />
				<option id="exact" preset="EXACT" />
			</options>
		</queryBuilder>
	</queryBuilders>


	<languages>
		<language id="english" mainColumn="ELemma">
			<editors>
				<frontend_editor>
					<fields>
						<field column="ELemma"></field>
					</fields>
				</frontend_editor>
				<backend_editor>
					<fields>
						<!-- Editors must ensure that this field is not empty (visitors don't 
							have to) -->
						<field column="ELemma" allowsNull="false"></field>
					</fields>
				</backend_editor>
			</editors>
			<results>
				<fields>
					<field column="ELemma" format="{0}"></field>
				</fields>
			</results>
		</language>
		<language id="middle_persian" mainColumn="MPLemma">
			<editors>
				<frontend_editor>
					<fields>
						<field column="MPLemma"></field>
					</fields>
				</frontend_editor>
				<backend_editor>
					<fields>
						<field column="MPLemma" allowsNull="false"></field>
					</fields>
				</backend_editor>
			</editors>
			<results>
				<fields>
					<field column="MPLemma" format="{0}"></field>
				</fields>
			</results>
		</language>
	</languages>

	<queryUI>
		<defaultFrontendQueryFields>
			<uifield id="searchPhrase" type="TEXT" submit="true" />
		</defaultFrontendQueryFields>
		<advancedFrontendQueryFields>
			<uifield id="searchPhrase" type="TEXT" submit="true" />
			<uifield id="language" type="RADIO" />
			<uifield id="method" type="RADIO" />
			<uifield id="highlight" buildin="true" type="CHECKBOX" />
			<uifield id="pageSize" buildin="true" type="COMBO" />
		</advancedFrontendQueryFields>
		<defaultBackendQueryFields>
			<uifield id="searchPhrase" type="TEXT" submit="true" />
			<uifield id="language" type="RADIO" />
			<uifield id="method" type="RADIO" />
		</defaultBackendQueryFields>
		<advancedBackendQueryFields>
			<uifield id="searchPhrase" type="TEXT" submit="true" />
			<uifield id="language" type="RADIO" />
			<uifield id="method" type="RADIO" />
			<uifield id="highlight" buildin="true" type="CHECKBOX" />
			<uifield id="pageSize" buildin="true" type="COMBO" />
		</advancedBackendQueryFields>
	</queryUI>

</dictionaryConfiguration>